<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        app:layout_constraintEnd_toStartOf="@+id/recycler_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/recycler_view"
        app:layout_constraintBottom_toTopOf="@+id/recycler_view"
        app:tabMode="scrollable" >

        <com.google.android.material.tabs.TabItem
            android:id="@+id/asia1_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="東・東南アジア" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/asia2_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="南・中央アジア" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/oceania_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="オセアニア" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/north_america_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="北米" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/central_america_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="中米" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/south_america_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="南米" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/europe_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ヨーロッパ" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/middle_east_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="中東・北アフリカ" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/africa_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="アフリカ" />
    </com.google.android.material.tabs.TabLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tabLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>